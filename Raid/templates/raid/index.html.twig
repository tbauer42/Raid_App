{% extends 'base.html.twig' %}

{% block title %}Hello RaidController!{% endblock %}

{% block body %}

<section class="actualités">

            {% for article in articles %}
                <article>
                    <h2>{{ article.title }}</h2>
                    <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y')}} à {{ article.createdAt | date('H:i')}} dans la catégorie gaming</div>
                    <div class="content">
                        <img src="{{ article.image }}" alt="">
                        <p>
                            {{ article.content | raw }}
                        </p>
                        <a href="{{ path('actualités_show', {id: article.id})}}" class="btn btn-primary">Lire la suite</a>
                    </div>
                </article>
            {% endfor %}

</section>

{% endblock %}
